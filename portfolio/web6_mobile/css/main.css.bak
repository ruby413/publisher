@charset "utf-8";
@import url(reset.css);
@import url(header.css);
@import url(footer.css);
@import url(pad.css);

#bottom_header{width:100%;
			   overflow:hidden;}
#bottom_header li{float:left;
				  width:20%;
				  text-align:center;
				  margin-top:12px;
				  height:25px;
				  border-bottom:1px solid #444;}
.banner_wrap{position:relative;
			 width:100%;}
.banner{overflow:hidden;}
.banner li{float:left;
		   width:100%;}
.banner li img{width:100%;}
.btn{position:absolute;
	 bottom:3px;
	 text-align:center;
	 width:100%;
	 left:0;}
.btn a{background:url(../images/btnoff.png) no-repeat 0 0 /6px 6px;
	   width:6px;
	   height:6px;}
.btn a.on_btn{background:url(../images/btnon.png) no-repeat 0 0 /6px 6px;
			  width:6px;
			  height:6px;}
.btn a{text-indent:-9999px;
	   display:inline-block}

.tab{padding:15px 0;
	 background:#d7d7d7;}
.tab ul{overflow:hidden;
		text-align:center;}
.tab ul li{float:left;
		   width:25%;}

.New{overflow:hidden;
	 width:100%;
	 position:relative;
	 height:270px;}
.New h3{padding:20px;
	    float:left;
		width:58%; 
	    display:inline-block;}
.New h4 a.on{color:#9e0404;}
.New h4{float:left;
		width:15%;
		text-align:center;
		margin:20px 0;}
.New .n_men_h4{width:12%;
	   background:url(../images/men_women_bar.gif) no-repeat right 0 /2px 12px}
.New ul{position:absolute;
		top:55px;
		left:0;
		overflow:hidden;
		border-top:1px solid #ccc;
		width:100%;}
.New ul li{float:left;
		   width:30%;
		   text-align:center;
		   padding:20px 0}
.New ul li:first-child{margin-left:5.5%}
.New ul p{
		  padding:10px 0;}
.new_btn{}
.new_btn .left_b1{position:absolute;
		         top:130px;
				 left:2%;}
.new_btn .right_b1{position:absolute;
				  top:130px;
                  right:2%;}
.n_w{display:none;}



