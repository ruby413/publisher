.Best .b_men_h4{width:12%;
	   background:url(../images/men_women_bar.gif) no-repeat right 0 /2px 12px}
.Best ul{position:absolute;
		top:55px;
		left:0;
		overflow:hidden;
		border-top:1px solid #ccc;
		width:100%;}
.Best ul li{float:left;
		   width:30%;
		   text-align:center;
		   padding:20px 0}
.Best ul li:first-child{margin-left:5.5%}
.Best ul p{
		  padding:10px 0;}
.new_btn{}
.new_btn .left_b2{position:absolute;
